{
  "dependencies": {},
  "devDependencies": {
    "husky": "^8.0.0",
    "lint-staged": "^16.1.6"
  },
  "scripts": {
    "prepare": "husky install"
  },
  "lint-staged": {
    "frontend/**/*.{js,jsx,ts,tsx}": [
      "npm run lint",
      "npm run lint-fix",
      "git add"
    ],
    "workflows/**/*.py": [
      "ruff format",
      "ruff check --fix",
      "git add"
    ]
  }
}
