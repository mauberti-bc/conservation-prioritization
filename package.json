{
  "dependencies": {},
  "devDependencies": {
    "husky": "^8.0.0",
    "lint-staged": "^16.1.6"
  },
  "scripts": {
    "prepare": "husky install"
  },
  "lint-staged": {
    "frontend/**/*.{js,jsx,ts,tsx}": [
      "yarn --cwd frontend format-fix",
      "yarn --cwd frontend lint-fix"
    ],
    "workflows/**/*.py": [
      "yarn --cwd workflows format",
      "yarn --cwd workflows lint-fix"
    ]
  }
}